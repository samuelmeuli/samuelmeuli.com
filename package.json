{
	"name": "samuelmeuli.com",
	"description": "My personal website",
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/samuelmeuli.com",
	"homepage": "https://samuelmeuli.com",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "hugo server --buildDrafts --buildFuture --port 3000",
		"build": "hugo --buildFuture --minify",
		"lint": "stylelint --fix --max-warnings 0",
		"format": "prettier --write"
	},
	"dependencies": {},
	"devDependencies": {
		"@samuelmeuli/prettier-config": "^1.0.0",
		"@samuelmeuli/stylelint-config": "^3.0.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.8",
		"prettier": "^1.19.1",
		"stylelint": "^13.2.0"
	},
	"stylelint": {
		"extends": "@samuelmeuli/stylelint-config"
	},
	"prettier": "@samuelmeuli/prettier-config",
	"lint-staged": {
		"*.{css,sass,scss}": [
			"yarn lint",
			"yarn format"
		],
		"*.{html,js,json,jsx,md,ts,tsx,vue,yaml,yml}": [
			"yarn format"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
