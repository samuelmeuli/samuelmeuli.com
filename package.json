{
	"name": "samuelmeuli.com",
	"description": "My personal website",
	"author": "Samuel Meuli <me@samuelmeuli.com>",
	"repository": "github:samuelmeuli/samuelmeuli.com",
	"homepage": "https://samuelmeuli.com",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "hugo server --buildDrafts --buildFuture --port 3000",
		"build": "hugo --buildFuture --minify",
		"format": "prettier --write",
		"lint": "stylelint --fix --max-warnings 0 --syntax scss"
	},
	"devDependencies": {
		"@samuelmeuli/stylelint-config": "~1.0.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "1.16.4",
		"stylelint": "^9.10.1"
	},
	"stylelint": {
		"extends": "@samuelmeuli/stylelint-config"
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.scss": [
			"yarn format",
			"yarn lint",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	}
}
